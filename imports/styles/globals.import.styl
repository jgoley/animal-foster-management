html
body
  height 100vh
  position relative

body
  font-family 'Open Sans', sans-serif
  margin 0
  padding 0
  background darken(#f9f9f9, 2%)
  color $body-text

ul
  margin 0
  padding 0
  li
    margin-bottom 1em
    list-style none
    margin 0 0 1.2em 0
    p
      margin 0

a
  color $secondary
  cursor pointer
  &:hover
    color $primary
  &
  &:hover
  &:focus
    text-decoration none

h1
h2
h3
  margin 0
  font-family 'Londrina Solid'
  font-weight 600
  text-transform uppercase
  color $body-text
  letter-spacing .08em
