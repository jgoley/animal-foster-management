@font-face
  font-family 'animals'
  src url('fonts/animals.eot?lxuqb0')
  src url('fonts/animals.eot?lxuqb0#iefix') format('embedded-opentype'),
      url('fonts/animals.ttf?lxuqb0') format('truetype'),
      url('fonts/animals.woff?lxuqb0') format('woff'),
      url('fonts/animals.svg?lxuqb0#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"]
[class*=" icon-"]
  font-family 'animals'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-cats
  &:before
    content "\e900"
    color #666

.icon-dogs
  &:before
    content "\e901"
    color #666

.icon-kittens
  &:before
    content "\e902"
    color #666

.icon-puppies
  &:before
    content "\e903"
    color #666
