body
  font-family 'Open Sans', sans-serif
  margin 0
  padding 0

ul
  margin 0
  padding 0
  li
    margin-bottom 1em
    list-style none
    margin 0 0 1.2em 0
    p
      margin 0

a
  text-decoration none
  color #AC2A1A
  &:hover
    color #3B6378

h1
h2
h3
  margin 0

header
  background #f9f9f9
  padding .25em 5%
  display flex
  align-items center
  nav
    margin-left auto
  ul
    list-style none
    margin 0
  li
    margin 0
  h1
    font-size 2em

section
  padding 30px 5% 30px 5%

.flex
  display flex
  align-items center

.animal-label
  font-size 1.5em

.selection
  color #333
  text-decoration none
  line-height 1
  display flex
  align-items center
  cursor pointer
  &::before
    content '\f05d'
    font-family 'FontAwesome'
    font-size 2em
    line-height 1
    margin-right .5em
    cursor pointer
    transition .3s
    color #CCC
  &.checked
  &.selected
    &
    &::before
      color green
      transition .2s
  &:hover
    text-decoration none
    &::before
      transform scale(1.2)
      transform-origin center
